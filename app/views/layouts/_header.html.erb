<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("dictionary.myblog"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts.home"), root_path %></li>
        <li><%= link_to t("layouts.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.header.title"), users_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
           <%= t "layouts.header.account" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("layouts.header.profile"), current_user %></li>
            <li><%= link_to t("layouts.header.settings"), edit_user_path(current_user) %></li>
            <li><%= link_to t("layouts.header.english"), locale:"en" %></li>
            <li><%= link_to t("layouts.header.vietnamese"), locale:"vi" %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("layouts.header.log_out"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
        <% else %>
          <li><%= link_to t("layouts.header.log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
